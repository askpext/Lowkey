{
    "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
    "appId": "com.lowkey.app",
    "productName": "Lowkey",
    "directories": {
        "output": "release"
    },
    "files": [
        "dist/**/*",
        "package.json"
    ],
    "extraResources": [
        {
            "from": "resources/llama",
            "to": "llama",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "resources/icon.ico",
            "to": "icon.ico"
        },
        {
            "from": "resources/linux/icon.png",
            "to": "linux/icon.png"
        }
    ],
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            },
            {
                "target": "portable",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "resources/linux/icon.png"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
    },
    "portable": {
        "artifactName": "Lowkey-Portable-${version}.exe"
    },
    "linux": {
        "target": [
            {
                "target": "AppImage",
                "arch": [
                    "x64"
                ]
            },
            {
                "target": "deb",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "resources/linux",
        "category": "Utility"
    }
}